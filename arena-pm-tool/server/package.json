{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:init": "node scripts/initDatabase.js",
    "db:reset": "node scripts/resetDatabase.js",
    "db:add-comments": "node scripts/addCommentsTable.js",
    "db:fix-workspace-ids": "node scripts/fixWorkspaceUserIds.js",
    "db:backup": "node scripts/backupDatabase.js",
    "db:restore": "node scripts/restoreDatabase.js",
    "db:deploy": "node scripts/deployDatabase.js",
    "db:diff": "cd .. && npx supabase db diff --use-migra -f",
    "db:push": "cd .. && npx supabase db push",
    "db:pull": "cd .. && npx supabase db pull",
    "migrate:up": "node-pg-migrate up --migrations-dir migrations --migration-file-language js",
    "migrate:down": "node-pg-migrate down --migrations-dir migrations --migration-file-language js",
    "migrate:create": "node-pg-migrate create --migrations-dir migrations --migration-file-language js",
    "db:migrate": "cd .. && npx supabase migration up",
    "db:migrate-workspaces": "node scripts/migrateToWorkspaces.js",
    "db:add-reliability-tables": "node scripts/addProductionReliabilityTables.js",
    "email:test": "node scripts/testEmail.js",
    "reminders:test": "node scripts/testReminders.js",
    "reminders:run": "node jobs/reminderJob.js --run-once",
    "reminders:schedule": "node jobs/reminderJob.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "seed:perf": "node scripts/seedPerformanceData.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
